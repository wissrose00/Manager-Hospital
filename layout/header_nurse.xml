<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/sz_normal180"
    android:background="@color/backgroundToolbar"
    android:orientation="vertical"
    android:padding="@dimen/space_large"
    android:gravity="bottom"
    >
    <ImageView
        android:layout_width="@dimen/sz_small80"
        android:layout_height="@dimen/sz_small80"
        android:src="@drawable/logonurse"/>
    <TextView
        android:id="@+id/tv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/space_normal"
        android:textColor="@color/white"
        android:textSize="@dimen/txt_label"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/tv2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/space_normal"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="@dimen/txt_content"
        />
</LinearLayout>
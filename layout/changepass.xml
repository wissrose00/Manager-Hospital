<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="SpeakableTextPresentCheck">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:background="@color/backgroundtransparentGray">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/space_xl">


            <ImageView
                android:layout_width="@dimen/sz_normal150"
                android:layout_height="@dimen/sz_normal150"
                android:src="@drawable/changepass"/>

        </LinearLayout>

        <!--Title-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/space_2xl"
            android:layout_marginBottom="@dimen/space_2xl">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/changepassword"
                android:textSize="@dimen/txt_title2"
                android:textColor="@color/teal"
                android:textStyle="bold"
                android:textAllCaps="true"/>

        </LinearLayout>

        <!--EditText Old-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/space_medium">

            <EditText
                android:id="@+id/ed1"
                android:layout_width="@dimen/sz_medium350"
                android:layout_height="@dimen/sz_tiny55"
                android:inputType="textPassword"
                android:background="@color/colorWhite"
                android:textColor="@color/colorBlack"
                android:textColorHint="@color/colorGray"
                android:hint="@string/passcurrent"
                tools:ignore="Autofill,TextFields"
                android:padding="@dimen/space_normal"/>

        </LinearLayout>

        <!--EditText New and Confirm-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/space_medium"
            android:layout_marginBottom="@dimen/space_medium">

            <EditText
                android:id="@+id/ed2"
                android:layout_width="@dimen/sz_medium350"
                android:layout_height="@dimen/sz_tiny55"
                android:inputType="textPassword"
                android:background="@color/colorWhite"
                android:hint="@string/newpass"
                android:textColor="@color/colorBlack"
                android:textColorHint="@color/colorGray"
                android:layout_marginBottom="@dimen/space_medium"
                android:padding="@dimen/space_normal"/>

            <EditText
                android:id="@+id/ed3"
                android:layout_width="@dimen/sz_medium350"
                android:layout_height="@dimen/sz_tiny55"
                android:inputType="textPassword"
                android:background="@color/colorWhite"
                android:textColor="@color/colorBlack"
                android:textColorHint="@color/colorGray"
                android:hint="@string/renewpass"
                android:padding="@dimen/space_normal"/>

            <CheckBox
                android:id="@+id/cb1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginEnd="@dimen/space_normal"
                android:minHeight="@dimen/sz_tiny50"
                android:text="@string/Showpass" />

        </LinearLayout>

        <!-- Button Update-->
        <LinearLayout
            android:layout_marginTop="@dimen/space_medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <Button
                android:id="@+id/btn1"
                android:layout_width="@dimen/sz_medium350"
                android:layout_height="@dimen/sz_tiny55"
                android:text="@string/changepassword"
                android:textColor="@color/white"
                android:textSize="@dimen/txt_label"
                android:background="@drawable/custom_btn2"
                app:backgroundTint="@null"/>
        </LinearLayout>
    </LinearLayout>

</ScrollView>
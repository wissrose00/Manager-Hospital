<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imgV"
        android:layout_width="@dimen/sz_large700"
        android:layout_height="@dimen/sz_medium300"
        android:layout_margin="@dimen/space_medium"
        android:layout_centerInParent="true"
        android:contentDescription="@string/app_logo"
        android:maxHeight="@dimen/sz_medium300"
        android:src="@drawable/logo" />

    <TextView
        android:layout_below="@id/imgV"
        android:layout_centerHorizontal="true"
        android:id="@+id/txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/logan"
        android:textAlignment="center"
        android:textColor="@color/teal"
        android:textAllCaps="true"
        android:textSize="@dimen/txt_title1"
        android:textStyle="bold" />

</RelativeLayout>